  while(ok){
    printf("introduceti alegerea: ");
    sacnf("%d",&alegere);
    printf("\n");
    if(alegere<1 || alegere>8)
      ok=0;

    switch(alegere){
    case 1:
      break;
    case 2:
      break;
    case 3:
      break;
    case 4:
      break;
    case 5:
      break;
    case 6:
      break;
    case 7:
      break;
