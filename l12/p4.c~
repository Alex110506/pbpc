#include <stdio.h>

#define CHUNK 100

char **linii;
int nrLinii=0;

FILE *fin=NULL;
FILE *fout=NULL;

void eliberare(){
  for(int i=0 ; i<nrLinii ; i++){
    free(linii[i]);
  }
  free(linii);
  if(fin) free(fin);
  if(fout) free(fout);
  return ;
}

char *citire(){
  int size=CHUNK;
  char *s=malloc(size*sizeof(char));
  if(s==NULL){
    printf("Nu e destula memorie");
    eliberare();
    exit(EXIT_FAILURE);
  }

  s[0]='\0';

  char aux[CHUNK];

  while(fgets(aux,CHUNK,fin)!=NULL){
    if(strlen(s)+strlen(aux)+1>size){
      size+=CHUNK;
      s=realloc(s,size);
    }

    strcat(s,aux);

    if(strchr(aux,'\n')){
      break;
    }
  }

  s=realloc(s,strlen(s)+1);

  return s;
}

int main(){
  char *linie=NULL;

  if((fin=fopen("scrisoare.txt","r"))==NULL){
    printf("nu se poate deschide fis de citire");
    exit(EXIT_FAILURE);
  }

  while(linie=citire()){
    char *aux=realloc(linii,(nrLinii+1)*sizeof(char));
    if(aux==NULL){
      printf("mem insuficienta");
      exit(1);
    }

    linii=aux;
    linii[nrLinii]=linie;
    nrLinii++;
  }

  for(int i=0 ; i<nrLinii ; i++){
    printf("%s\n",linii[i]);
  }
}
