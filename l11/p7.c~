#include <stdio.h>
#include <stdlib.h>
#include <string.h>

#define CHUNK 10

char *citire(){
  size_t size=CHUNK;

  char *s=malloc(size);
  char aux[CHUNK];

  while((fgets(aux,CHUNK,stdin))){
    if(strlen(s)+strlen(aux)>size){
      size+=CHUNK;
      s=realloc(s,size);
    }

    strcat(s,aux);

    if(strchr(aux,'\n')){
      break;
    }
  }

  s[strcspn(s,"\n")]=0;
  s=realloc(s,strlen(s)+1);

  return s;
}

char *hex2text(const char *hexs){
  size_t len = strlen(hexs)/2+1;
  
  char *s=malloc(len);

  const char *ptr_hexs=hexs;

  for(int i=0 ; i<len-1 ; i++){
    char hexy[3];
    strncpy(hexy,ptr_hexs,2);
    char c=(char)strtol(hexy,NULL,16);
    ptr_hexs+=2;
    *(s+i)=c;
  }
  s[len-1]=0;
  return s;
}

int main(){
  char *p=citire();
}
